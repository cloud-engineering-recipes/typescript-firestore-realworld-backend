{
  "name": "typescript-firestore-realworld-backend",
  "version": "0.0.0",
  "description": "TypeScript codebase containing real world examples (CRUD, auth, advanced patterns, etc) that adheres to the RealWorld spec and API.",
  "author": "Marcus Vinicius Monteiro de Souza",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "license": "MIT",
  "keywords": [
    "typescript",
    "google-cloud",
    "realworld",
    "realworld-backend"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "docker compose up firestore_emulator -d --wait && nodemon --watch 'src/**/*.ts' --exec \"ts-node\" -r dotenv-expand/config src/index.ts",
    "up": "docker compose up",
    "up:build": "docker compose up --build",
    "down": "docker compose down",
    "format": "prettier --write .",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.14",
    "@types/node": "^14.11.2",
    "gts": "^3.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.4.1",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^9.0.0",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0"
  }
}
